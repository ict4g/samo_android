<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="mapViewStyle">
        <item name="android:gravity">center</item>
    </style>

    <style name="greenButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/green_button_bg</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/Snow</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="redButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/red_button_bg</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/Snow</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="grayButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/gray_button_bg</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="imageGrayButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/image_gray_button_bg</item>
        <item name="android:layout_margin">5dp</item>
    </style>
</resources>